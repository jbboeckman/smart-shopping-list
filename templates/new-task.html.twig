{% extends 'base.html.twig' %}

{% block body %}

<div>

{{ form_start(task_form) }}

<div class="form-group">
{{ form_label(task_form.description) }}
{{ form_widget(task_form.description, {'attr': {'class' : 'form-control'} }) }}
</div>

<div class="form-group">
{{ form_label(task_form.dueDate) }}
{{ form_widget(task_form.dueDate, {'attr': {'class' : 'form-control'} }) }}
</div>

<div class="form-group">
{{ form_label(task_form.image) }}
{{ form_widget(task_form.image) }}
</div>

<div>
{{ form_widget(task_form.save, {'attr': {'class' : 'btn btn-primary'} }) }}
</div>

{{ form_end(task_form) }}

</div>
{% endblock %}